{
  "manifest_version": 2,
  "name": "Tabybear",
  "description": "Helps you to manage your browser tabs",
  "version": "0.9",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "logoBeta128.png"
  },
  "browser_action": {
    "default_title": "Tabybear",
    "default_popup": "popup.html",
    "default_icon": "logoBeta128.png"

  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "tabs",
    "bookmarks", 
    "storage"
  ]
}
