{
  "manifest_version": 2,
  "name": "Tabs Manager",
  "description": "React, Chrome, and Redux example",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Tabs Manager",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "tabs",
    "bookmarks", 
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
